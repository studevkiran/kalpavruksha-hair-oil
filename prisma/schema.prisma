generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
}

model Order {
  id              Int      @id @default(autoincrement())
  razorpayOrderId String   @unique
  amount          Int
  currency        String
  status          String
  name            String?  @default("")
  email           String?  @default("")
  phone           String?  @default("")
  createdAt       DateTime @default(now())
}
